#!/bin/bash

if ! grep -iq "unity8" /etc/pacman.conf; then
    echo '
[unity8]
SigLevel = Required
Server = https://unity8.mynameisivan.ru/$repo/os/$arch' >> /etc/pacman.conf

    pacman-key --init
    pacman-key --populate archlinuxarm
    pacman-key --recv-keys --keyserver hkps://hkps.pool.sks-keyservers.net F3A621DFD4328CC4
    pacman-key --lsign-key F3A621DFD4328CC4
fi
